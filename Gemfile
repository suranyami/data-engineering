source 'https://rubygems.org'

gem 'rails', '3.2.8'
gem 'jquery-rails'
gem "thin"
gem "mongoid"
gem "bootstrap-sass"
gem "simple_form"
gem "haml-rails"
gem 'underscore-rails'
gem 'factory_girl_rails', :require => false
gem 'fastercsv'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem "hpricot"
  gem "ruby_parser"
  gem "quiet_assets"
  gem "git-smart"
  gem "better_errors"
  gem "binding_of_caller"
end

group :test do
  gem "database_cleaner"
  gem "capybara"
  gem "mongoid-rspec"
end

group :development, :test do
  gem 'pry'
  gem 'pry-debugger'
  gem 'pry-remote'
  gem "rspec-rails"
  gem 'terminal-notifier-guard'
  gem 'rb-fsevent'
  gem 'guard-rspec'
  gem 'guard-pow'
  gem 'guard-bundler'
  gem "guard-spork"
  gem "guard-livereload"
end
